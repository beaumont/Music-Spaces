<% max = @request.env.keys.max { |a,b| a.length <=> b.length } -%>
<% @request.env.keys.sort.each do |key| -%>
* <%= "%-*s: %s" % [max.length, key, filter_sensitive_post_data_from_env(key, @request.env[key].to_s.strip)] %>
<% end -%>

* Process: <%= $$ %>
* Server : <%= `hostname -s`.chomp %>
* Current user: <%= try(:current_user).try(:login) %>
* SVN revision: <%= `cat REVISION`.chomp if File.exist?('REVISION')%>
* Server time: <%= Time.now.to_s(:db) %>
