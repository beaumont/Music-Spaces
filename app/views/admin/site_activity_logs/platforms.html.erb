<% @title = 'Admin Console'.t + ' :: ' + 'Activity Log'.t + 'Platforms'.t %>


<div class="admin">
  <% @platforms.each_with_index do |platform, index| %>
    <div>
      <% width = (platform[:total] / @total.to_f) %>
      <%= index.next %>. <b><%= platform[:name] %></b> <%= platform[:total] %>
      <i>(<%= number_to_percentage width * 100, :precision => 2 %>)</i><br />

      <div style="width:<%= (width * 900).to_i %>px;background-color:#<%= browser_color(platform[:name]) %>;">&nbsp;</div>
    </div>
  <% end %>
</div>