<h1>Public Music album <%= @content.title %></h1>

<%= error_messages_for :content %>


<% form_for :content, :url => {:action => :publish} do |f| %>
    <%= f.hidden_field 'id' %>    
    <p><%= f.check_box("is_in_startpage", :style=>'width:auto;') %> <%= "Feature on Kroogi Page".t %></p>
    
    <p>Permissions:<br/>
        <select name="content[relationshiptype_id][]" id="content_permissions">
        <%= options_for_select Content.privacy_menu(@content.user), @content.restriction_level %>
    </select>
    </p>
    
    <p><input type="checkbox" name="send_message" value="1" /> Broadcast message that album is available</p>
    
    <br/>
    <p><%= submit_tag 'Publish Album' %></p>
    <br/>
    <br/>
<% end %>
