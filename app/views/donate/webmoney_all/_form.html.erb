<h3 <%= available_processor ? "" : "style='display:none'" %> ><a href="#"><%= p[:name].t %></a></h3>
<div class="contribution_option_body">
    <form id="webmoney_rur_donation_form" action="<%= WEBMONEY_CONFIG[:url] %>" accept-charset="windows-1251" method="post">
      <input type="hidden" name="LMI_PAYMENT_DESC" value="<%=  title %>"/>
      <input type="hidden" name="LMI_PAYEE_PURSE" value="<%= WEBMONEY_CONFIG[:purse_rur] %>"/>
      <%= render :partial => "/donate/webmoney_common/common", :locals => {
                   :p => p,
                   :available_processor => true,
                   :title => title,
                   :karma_point_id => karma_point_id,
                   :donor_id => donor_id,
                   :content_id => content_id,
                   :recipient_id => recipient_id,
                   :return_url => return_url,
                   :cancel_url => cancel_url,
                   :download => download,
      } %>

      <div id="webmoney_rur_contribution_amount">
        <label for="webmoney_rur_contribution_amount_field"><%= "Amount (RUR)".t %></label>
        <%= text_field_tag :LMI_PAYMENT_AMOUNT, suggested_contribution_amount(content, 'rur'),
          :id => "webmoney_rur_contribution_amount_field" %>
      </div>
      <div class="donation_button">
        <%= link_to(
          "<span>" + "Contribute using".t + " " + "WebMoney (RUR)".t + "</span>",
          "#",
          {:onclick=>"run_choice('webmoney_rur'); return false;",
           :class => 'button'} ) %>
        <%= wait_up_homie %>
      </div>
      <div style="clear:both"></div>
    </form>
    <hr style="border:none;color:#000; background-color:#888; height:1px">
