<script type="text/javascript" charset="utf-8">
  function doBlockToggle() {
    $('do-block-link').toggle();
    $('block-content').toggle();
  }
</script>
<%= 'Restore'.t %>

<div id="block-wrapper">
  <a href="javascript:doBlockToggle();" id="do-block-link"><%= 'Restore this'.t %></a>
  <div id="block-content" style="display:none;">
    <div class="rpt-head"><%= 'Reason For Restoring'.t %></div>
    <div id="block-errors">&nbsp;</div>

    <% remote_form_for :restore, :url => {:controller => 'moderate', :action => 'restore', :type => 'Content', :id => entry} do |f| %>
      <p><%= f.text_area :message, :style => 'width: 100%; height: 60px; padding: 3px;' %></p>
      <p>
        <button type="submit" class="button" style="float: left;">
          <span><%= 'Restore'.t %></span>
        </button>
        <button type="button" class="button_gr" style="float: right;" onclick="doBlockToggle();">
          <span><%= 'Cancel'.t %></span>
        </button>
      </p>
      <br class="clear"/>
    <% end %>
  </div>
</div>