<% main_block(:header_title => 'Disable person or project abusing Kroogi system'.t, :white_body => true) do %>
  <% form_for :block do |f| %>

  <div style="margin-bottom: 10px;">
    <p><%= error_messages_for :block %></p>
    <p><%= @error_message %></p>
    <h2><%= 'Disable this person or project'.t %></h2>
    <p>
      <label>
        <span style="margin-right: 5px;"><%= 'Kroogi Name'.t -%>:</span>
        <%= user_link(@user, :icon => true, :use_both => true) %>
        <%#= text_field_tag :login, @user ? @user.login : '', :class => 'feedback_input', :style => 'width: 200px; margin-left: 5px;' %>
      </label>
    </p>
  </div>

  <div style="margin-bottom:10px;">
    <h2><%= 'Reason for disabling'.t %></h2>
    <ul style="list-style-type:none;">

      <% Moderation::Event.categories(:block_user).each do |label, value| %>
      <li>
        <label>
          <%= check_box_tag 'block[reason][]', value %>
          <%=h label %>
        </label>
      </li>
      <% end %>
    </ul>

    <h2><%= 'Details (required)'.t %></h2>
    <%= f.text_area :message, :style => 'width: 100%; height: 100px;', :class => 'feedback_input' %>

  </div>

  <p style="text-align: center;">
    <button type="submit" class="button" style="">
      <span><%= 'Disable'.t %></span>
    </button>
    <button type="button" class="button_gr" onclick="document.location.href='<%= userpage_path(@user) %>';">
      <span><%= 'Cancel'.t %></span>
    </button>
  </p>

  <% end %>
<% end %>
